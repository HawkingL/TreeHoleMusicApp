/* 轮播图样式 */
.swiperStely {
  margin: 25rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.banners {
  width: 100%;
  height: 300rpx;
}

.banners image {
  width: 100%;
  height: 100%;
}

/* 图标导航样式 */
.navContent {
  display: flex;
  border-bottom: 1rpx solid rgb(235, 233, 233);
  padding-bottom: 20rpx;
}

.navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background-color: #ec4141;
  font-size: 50rpx;
  color: white;
  margin: 20rpx 0;
}

.navItem text {
  font-size: 26rpx;
}


/* 推荐歌曲样式 */
.recommendContent {
  padding: 15rpx 25rpx 25rpx;
  border-bottom: 1rpx solid rgb(235, 233, 233);
}

/* 推荐内容区域 */
.recommendScroll {
  display: flex;
  margin-top: 14rpx;
  height: 280rpx;
}

.scrollItem {
  width: 200rpx;
  margin-right: 20rpx;
}

.scrollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius:  20rpx;
}

.scrollItem text {
  /* 单行文本溢出
  display: block;
  font-size: 26rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical; /* 设置对齐模式 */
  -webkit-line-clamp: 2; /* 设置多行的行数 */
}

/* 排行榜 */
.topList {
  padding: 15rpx 25rpx;
}

.topListSwiper {
  height: 430rpx;
}
.musicItem {
  display: flex;
  margin-bottom: 20rpx;
}

.swiperItem {
  width: 96%;
}

.swiperItem .title {
  font-size: 30rpx;
  line-height: 80rpx;
}

.musicItem image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}

.musicItem .count {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}

.musicItem .musicName {
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
}

